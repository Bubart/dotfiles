# Restarting
cmd + shift - r : yabai --restart-service && skhd --restart-service

# Move focus with vim keys
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# Move window position with vim keys
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

# Move window to other workspaces
cmd + shift - 1 : yabai -m window --space 1;
cmd + shift - 2 : yabai -m window --space 2;
cmd + shift - 3 : yabai -m window --space 3;
cmd + shift - 4 : yabai -m window --space 4;
cmd + shift - 5 : yabai -m window --space 5;
cmd + shift - 6 : yabai -m window --space 6;
cmd + shift - 7 : yabai -m window --space 7;
cmd + shift - 8 : yabai -m window --space 8;
cmd + shift - 9 : yabai -m window --space 9;
cmd + shift - 0 : yabai -m window --space 10;

# Fake fullscreen
cmd - f : yabai -m window --toggle zoom-fullscreen

# fullscreen
cmd + shift - f : skhd -k "ctrl + cmd - f"

# Toggle floating
cmd - d : yabai -m window --toggle float --grid 8:8:1:1:6:6

# Quit/Close window
cmd - q : yabai -m window --close

# Some common shortcuts
cmd - c : alacritty
cmd - e : open ~
cmd - b : open https://codedmaster.com

# Lockscreen
cmd - m : skhd -k "ctrl + cmd - q"

# Clipboard
ctrl - c  [
    "*"         : skhd -k "cmd - c" 
    "alacritty" ~ 
]
ctrl - a : skhd -k "cmd - a" 
ctrl - v : skhd -k "cmd - v" 
ctrl - x : skhd -k "cmd - x"

# Emulate cmd + w and cmd + t
ctrl - w : skhd -k "cmd - w"
ctrl - t : skhd -k "cmd - t"
ctrl - n : skhd -k "cmd - n"

# Emulate ctrl + shift - i
ctrl + shift - i : skhd -k "cmd + alt - i"
